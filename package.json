{
  "name": "qxmp-por-pipeline",
  "version": "1.0.0",
  "description": "QXMP Labs RedStone-Based Proof-of-Reserves Pipeline",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src/**/*.ts",
    "parse:akta": "npm run parse -- --asset=AKTA-NI43-ZA -w packages/pdf-parser",
    "deploy:testnet": "npm run deploy:testnet -w packages/contracts",
    "deploy:mainnet": "npm run deploy:mainnet -w packages/contracts",
    "api:dev": "npm run dev -w packages/api",
    "oracle:start": "npm run start -w packages/oracle-service"
  },
  "keywords": [
    "proof-of-reserves",
    "redstone",
    "oracle",
    "rwa",
    "tokenization",
    "gold",
    "mining"
  ],
  "author": "QXMP Labs",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}